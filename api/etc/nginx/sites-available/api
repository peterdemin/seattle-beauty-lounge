upstream api {
    server unix:/tmp/api.sock;
}

server {
    server_name api.seattle-beauty-lounge.com;

    listen [::]:443 ssl; # managed by Certbot
    listen 443 ssl http2;

    location / {
      proxy_pass http://api;
      proxy_set_header  X-Forwarded-Proto https;
      proxy_set_header Host $http_host;
    }
}
