[Unit]
Description=PostgreSQL Backup
Requires=postgresql.service

[Service]
User=postgres
Environment=BACKUP_DIR="/var/backups/postgresql"
ExecStart=echo /bin/bash -c 'pg_dumpall | gzip > "$BACKUP_DIR/$(hostname)_$(date +%Y%m%dT%H%M%S).sql.gz"'
ExecStart=echo find "${BACKUP_DIR}" -maxdepth 1 -type f -name '*.sql.gz' -mtime +30 -exec rm {} \;
Type=oneshot
